<div class="container">
     <div class="row">
       <h4 class="mt-4 bg-light">配送先登録 / 一覧</h4>
     </div>
      <div class="row mt-5">
        <div class="col-8 mr-auto">
          <%= form_with model: @shipping do |f| %>
             <table class="table table-borderless">
                <tbody>
                   <tr>
                     <td>郵便番号(ハイフンなし )</td><td><%= f.text_field :postal_code, placeholder: "0000", class:"form-control" %></td>
                   </tr>
                   <tr>
                     <td>住所</td><td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class:"form-control" %></td>
                   </tr>
                   <tr>
                     <td>宛名</td><td><%= f.text_field :name, placeholder: "令和道子", class:"form-control" %></td>
                     <td><%= f.submit '新規登録', class: "px-5 btn btn-success" %></td>
                   </tr>
                </tbody>
              </table>
            <% end %>
          </div>
        </div>
        <div class="row mt-5">
          <div class="col-10 mr-auto">
              <table class="table table-bordered">
                  <thead class="bg-light">
                    <th>郵便番号</th>
                    <th>住所</th>
                    <th>宛名</th>
                    <th></th>
                 </thead>
                 <tbody>
                   <% @shippings.each do |shipping| %>
                     <tr>
                       <td><%= shipping.postal_code %></td>
                       <td><%= shipping.address %></td>
                       <td><%= shipping.name %></td>
                       <td><%= link_to '編集する', edit_shipping_path(shipping.id), class: "btn btn-success" %>
                           <%= link_to '削除する', shipping_path(shipping.id), method: :delete, class: "btn btn-danger" %>
                       </td>
                     </tr>
                 <% end %>
                 </tbody>
               </table>
             </div>
           </div>
 </div>

