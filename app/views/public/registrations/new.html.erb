<div class="container">
   <div class="row">
     <h4 class="mt-4 bg-light">新規会員登録</h4>
      </div>
        <div class="row">
             <div class="col-10 mx-auto">
               <table class="table table-borderless">
                  <tbody>
                             <%= form_with model: @customer, url: customer_registration_path do |f| %>
                              <%= render "public/shared/error_messages", resource: resource %>
                            <tr>
                              <div class="field">
                                <td>名前</td>
                                <td><%= f.label :last_name, "(姓)" %></td>
                                <td><%= f.text_field :last_name, autofocus: true, placeholder: "令和", class:"form-control" %></td>
                                <td><%= f.label :first_name, "(名)" %></td>
                                <td><%= f.text_field :first_name, placeholder: "太郎", class:"form-control" %></td>
                              </div>
                            </tr>
                            <tr>
                               <div class="field">
                                <td>フリガナ</td>
                                <td><%= f.label :last_name_kana, "(セイ)" %></td>
                                <td><%= f.text_field :last_name_kana, placeholder: "レイワ", class:"form-control" %></td>
                                <td><%= f.label :first_name_kana, "(メイ)" %></td>
                                <td><%= f.text_field :first_name_kana, placeholder: "タロウ", class:"form-control" %></td>
                               </div>
                           </tr>
                           <tr>
                              <div class="field">
                                <td><%= f.label :email, "メールアドレス" %></td>
                                <td></td>
                                <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class:"form-control" %></td>
                              </div>
                           </tr>
                              <div class="field">
                           <tr>
                                <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
                                <td></td>
                                <td><%= f.text_field :postal_code, placeholder: "aaa", class:"form-control"  %></td>
                              </div>
                           </tr>
                           <tr>
                               <div class="field">
                                <td><%= f.label :address, "住所" %></td>
                                <td></td>
                                <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class:"form-control" %></td>
                              </div>
                           </tr>
                           <tr>
                              <div class="field">
                                <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
                                <td></td>
                                <td><%= f.text_field :telephone_number, placeholder: "00000", class:"form-control" %></td>
                              </div>
                           </tr>
                           <tr>
                              <div class="field">
                                <td><%= f.label :password, "パスワード" %>
                                    <% if @minimum_password_length %>
                                    <em>(<%= @minimum_password_length %> 文字以上)</em></td>
                                    <% end %>
                                    <td></td>
                                <td><%= f.password_field :password, autocomplete: "new-password", class:"form-control" %></td>
                              </div>
                           </tr>
                           <tr>
                              <div class="field">
                                <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
                                <td></td>
                                <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %></td>
                              </div>
                           </tr>
                           <tr>
                                <td></td>
                                <td></td>
                              <div class="actions">
                                <td width="260"><%= f.submit "新規登録", class: " px-5 btn btn-success" %></td>
                              </div>
                                <% end %>
                           </tr>
                  </tbody>
              </table>
            </div>
          </div>
   <div class="row">
       <h4 class="mt-4 bg-light">既に登録済みの方</h4>
        </div>
   <div class="row">
       <div class="mt-4 mb-5 ">
        <%= link_to "こちら", new_customer_session_path %> からログインしてください。
       </div>
   </div>
</div>


