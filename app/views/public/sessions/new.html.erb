 <div class="container">
     <div class="row">
       <h4 class="mt-4 bg-light">ログイン</h4>
     </div>
           <div class="row">
             <h6 class="ml-4 mt-4 bg-light">会員の方はこちらからログイン</h6>
           </div>
                  <div class="row">
                     <div class="col-7 px-5 mx-auto">
                         <table class="table table-borderless">
                             <tbody>
                                  <%= form_with model: @customer, url: customer_session_path do |f| %>
                                    <tr>
                                      <div class="field">
                                        <td><%= f.label "メールアドレス" %></td>
                                        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:"form-control" %></td>
                                      </div>
                                    </tr>
                                    <tr>
                                      <div class="field">
                                        <td><%= f.label "パスワード" %></td>
                                        <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
                                      </div>
                                    </tr>
                                    <tr>
                                      <div class="actions">
                                        <td></td>
                                        <td><%= f.submit "ログイン", class: " px-5 btn btn-primary" %></td>
                                      </div>
                                    </tr>
                                    <% end %>
                              </tbody>
                          </table>
                      </div>
                  </div>

            <div class="row">
               <h6 class="ml-4 mt-4 bg-light">会員登録がお済みでない方</h6>
            </div>
            <div class="row">
               <div class="ml-5 pl-5 mt-4 mb-5 ">
                  <%= link_to "こちら", new_customer_registration_path %> から新規登録を行ってください
               </div>
            </div>

</div>

