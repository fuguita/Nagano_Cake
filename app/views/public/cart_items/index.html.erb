<h3>ショッピングカート</h3>

<%= link_to 'カートを空にする', destroy_all_cart_item_path, method: :delete, class: "btn btn-danger" %>

<table class="table">
 <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>

 </thead>
 <tbody>

  <% @cart_items.each do |cart_item| %>

   <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
    <td><%= form_with model: cart_item do |f| %>
         <%= f.select :amount, *[1..10] %>
         <%= f.submit '変更', class: "btn btn-success" %>
        <% end %> </td>
    <td><%= cart_item.subtotal.to_s(:delimited) %></td>
    <td><%= link_to '削除する', cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
   </tr>
       <% @total += cart_item.subtotal %>
  <% end %>

 </tbody>
</table>
<div>合計金額<%= @total.to_s(:delimited) %>
</div>
<div><%= link_to '買い物を続ける', '/', class: "btn btn-info" %>
</div>

<%= link_to '情報入力に進む', new_order_path, class: "btn btn-success" %>




