<div>
 <%= image_tag @item.get_image(60, 60) %>
</div>
<div>
 <%= @item.name %>
</div>
<diV>
  <%= (@item.price*1.10).floor.to_s(:delimited) %>(税込)
</diV>

<%= form_with model: @cart_item, url: cart_items_path do |f| %>

 <%= f.hidden_field :item_id, :value => @item.id %>
 <%= f.select :amount, *[1..5], prompt: "個数選択" %>
 <%= f.submit 'カートに入れる' %>
<% end %>


