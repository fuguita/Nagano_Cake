<div class="container">
 <div class="row">
   <h4 class="mt-4 bg-light"><strong>商品一覧</strong></h4>
   <p class="pl-3 mt-4">全<%= @items_all.count %>件</p>
  </div>

 <div class="row">
      <% @items.each do |item| %>
      <div class="col-3 mx auto">
          <table class="table table-borderless">
              <thead>
                <th><%= link_to item_path(item.id) do %>
                    <%= image_tag item.get_image(100,100) %>
                  <% end %>
                </th>
              </thead>
              <tbody>
                <tr>
                    <td class="font-weight-bold"><%= item.name %></td>
                </tr>
                <tr>
                    <td class="font-weight-bold">¥<%= (item.price*1.10).floor.to_s(:delimited) %></td>
                </tr>
              </tbody>
          </table>
        </div>
      <% end %>
  </div>
  <div class="row">
        <div class="mx-auto">
            <%= paginate @items %>
        </div>
  </div>
</div>