<h3>注文情報確認 </h3>

<div>
<table class="table">
 <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
 </thead>
 <tbody>
  <% @cart_items.each do |cart_item| %>
   <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
    <td><%= cart_item.amount %></td>
    <td><%= cart_item.subtotal.to_s(:delimited) %></td>
   </tr>
       <% @total += cart_item.subtotal %>
  <% end %>
 </tbody>
</table>
</div>

<div>
<table class="table">
  <tr><th>送料</th><td><%= @order.shipping_cost %></td></tr>
  <tr><th>商品合計</th><td><%= @total.to_s(:delimited) %></td></tr>
  <tr><th>請求金額</th><td><%= (@order.shipping_cost+@total).to_s(:delimited) %></td></tr>
</table>
</div>

<h5><strong>支払い方法</strong></h5>
<%= @order.payment_method_i18n %>

<h5><strong>お届け先</strong></h5>
〒<%= @order.postal_code %> <%= @order.address %><br>
<%= @order.name %>


<%= form_with model: @order do |f| %>
<%= f.hidden_field :shipping_cost %>
<%= f.hidden_field :total_payment, :value => (@order.shipping_cost+@total) %>
<%= f.hidden_field :address %>
<%= f.hidden_field :postal_code %>
<%= f.hidden_field :name %>
<%= f.hidden_field :customer_id %>
<%= f.hidden_field :payment_method %>
<%= f.submit '注文確定' %>
<% end %>




