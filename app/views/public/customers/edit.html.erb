<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>会員情報編集</h2>

<%= form_with model: current_customer, url: information_customers_path, method: :patch do |f| %>

<div class="form_group">
 氏名 <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
</div>
<div class="form_group">
 フリガナ <%= f.text_field :last_name_kana %>
         <%= f.text_field :first_name_kana %>
</div>
<div class="form_group">
    郵便番号 <%= f.text_field :postal_code %>
</div>
<div class="form_group">
    住所 <%= f.text_field :address %>
</div>
<div class="form_group">
    メールアドレス <%= f.text_field :email %>
</div>
<div class="form-group">
 <%= f.submit "編集内容を保存", class: "btn btn-success" %>
</div>
<% end %>

  </div>
 </div>
</div>

