<h3>注文履歴詳細 </h3>
<div>
  <p>購入者 <%= @order.customer.full_name %></p>
  <p>注文日 <%= @order.created_at.strftime('%Y/%m/%d') %></p>
  <p>配送先 <%= @order.address %></p>
  <p>支払い方法 <%= @order.payment_method_i18n %></p>
</div>

<table class="table">
 <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
 </thead>
 <tbody>
  <% @order_details.each do |order_detail| %>
   <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.price.to_s(:delimited) %></td>
    <td><%= order_detail.amount %></td>
    <td><%= order_detail.subtotal.to_s(:delimited) %>
   </tr>
  <% end %>
 </tbody>
</table>

<table class="table">
  <!--<%# @total = @order_details.subtotal %>-->
  <tr><th>商品合計</th><td><%= @order_details.sum(&:subtotal) %></td></tr>
  <tr><th>送料</th><td><%= @order.shipping_cost %></td></tr>
  <tr><th>請求金額</th><td><%= @order.total_payment(@order_details.sum(&:subtotal)).to_s(:delimited) %><%#= (@order_details.sum(&:subtotal)+@order.shipping_cost).floor %></td></tr>
</table>


