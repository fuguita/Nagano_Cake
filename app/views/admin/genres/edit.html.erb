<div class="container">
   <div class="row">
       <h4 class="mt-4 bg-light">ジャンル編集</h4>
   </div>
   <div class="row mt-4">
       <div class="col-7 px-5">
         <%= form_with model: @genre, url: admin_genre_path do |f| %>
            <table class="table table-borderless">
                <tr>
                    <th>ジャンル名</th><td><%= f.text_field :name %></td>
                    <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
                </tr>
            </table>
          <% end %>
       </div>
   </div>
   </div>
</div>
