<div class="container">
  <div class="row">
     <h4 class="mt-4 bg-light">ジャンル一覧・追加</h4>
  </div>
       <div class="row mt-5">
          <div class="col-7">
            <%= form_with model: @genre, url: admin_genres_path do |f| %>
             <table class="table table-borderless">
                    <tr>
                      <th>ジャンル名</th><td><%= f.text_field :name, placeholder: "ジャンル名" %></td>
                       <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
                    </tr>
             </table>
            <% end %>
         </div>
       </div>

        <div class="row mt-5">
          <div class="col-5">
             <table class="table">
                <thead class="bg-light">
                  <th>ジャンル</th><th></th>
                </thead>
                <tbody>
                  <% @genres.each do |genre| %>
                      <tr>
                        <td><%= genre.name %></td>
                        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
                      </tr>
                        <% end %>
                </tbody>


</div>
