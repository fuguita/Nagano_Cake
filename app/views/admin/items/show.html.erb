<div class="container">
   <div class="row">
     <h4 class="mt-4 bg-light">商品詳細</h4>
   </div>

   <div class="row mt-5">
      <div class="col-4">
        <%= image_tag @item.get_image(300, 300) %>
      </div>
      <div class="col-6 offset-1">
        <table class="table table-borderless">
          <tbody>
             <tr>
                <td class="col-4">商品名</td><td><%= @item.name %></td>
             </tr>
             <tr>
                <td>商品説明</td><td><%= @item.introduction %></td>
             </tr>
             <tr>
                <td>ジャンル　<td><%= @item.genre.name %></td>
             </tr>
             <tr>
                <td>税込価格<br>(税抜価格)</td><td><%= @item.with_tax_price %> (<%= @item.price.to_s(:delimited) %>)円</td>
             </tr>
             <tr>
                <td>販売ステータス</td>
              <% if @item.is_active == true %>
                <td class="text-success font-weight-bold">販売中</td>
              <% else %>
                <td class="text-muted font-weight-bold">販売停止中</td>
              <% end %>
             </tr>
            </tbody>
          </table>
          <div class="text-center col-7">
          <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-lg btn-success mx-auto" %>
          </div>
        </div>
      </div>
    </div>
</div>