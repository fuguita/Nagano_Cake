<div class="container">
  <div class="row">
    <h4 class="mt-4 bg-light">商品編集</h4>
  </div>
        <div class="row mt-4">
           <div class="col-7 px-5 mx-auto">
             <%= form_with model: @item, url: admin_item_path do |f| %>
              <table class="table table-borderless">
                <tbody>
                  <tr>

                        <!--<div class="form_group">-->
                         <td>商品画像</td><td><%= f.file_field :image, accept: "image/*" %></td>
                        <!--</div>-->
                  </tr>
                  <tr>
                        <!--<div class="form_group">-->
                         <td>商品名</td> <td><%= f.text_field :name, class:"form-control" %></td>
                        <!--</div>-->
                  </tr>
                  <tr>
                        <!--<div class="form_group">-->
                         <td>商品説明</td> <td><%= f.text_area :introduction, class:"form-control" %></td>
                        </div>
                  </tr>
                  <tr>
                        <!--<div class="form_group">-->
                        <td>ジャンル</td><td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
                       </div>
                  </tr>

                  <tr>
                      <!--<div class="form_group">-->
                         <td>税抜価格</td> <td><%= f.text_field :price, class:"form-control" %></td><td>円</td>
                      </div>
                  </tr>
                  <tr>
                      <!--<div class="form_group">-->
                       <td>販売ステータス</td>
                       <td><%= f.radio_button :is_active, true %>
                       <%= f.label :is_active, '販売中' %>
                       <%= f.radio_button :is_active, false %>
                       <%= f.label :is_active, "販売停止中" %></td>
                      </div>
                  </tr>
               </tbody>
             </table>
                 <div class="text-center col-10">
                      <div class="form_group">
                         <%= f.submit "変更を保存", class: "btn btn-lg btn-success" %>
                      </div>
                 </div>
            <% end %>
        </div>
      </div>
 </div>
