<div class="container">
  <div class="row">
   <h5 class="my-4 bg-light">注文履歴一覧</h5>
  </div>
      <div class="row">
       <div class="col-9 mx-auto">
              <table class='table'>
                <thead class="bg-light">
                  <th>購入日時</th>
                  <th>購入者</th>
                  <th>注文個数</th>
                  <th>注文ステータス</th>
                </thead>
                <tbody>
                  <% @orders.each do |order| %>
                  <% @total_amount = 0 %>
                  <% order.order_details.each do |order_detail| %>
                  <% @total_amount += order_detail.amount %>
                  <% end %>
                 <tr>
                  <td><%= link_to admin_order_path(order), class: "text-dark" do %>
                  <%= order.updated_at.strftime('%Y/%m/%d %H:%M:%S') %>
                  <% end %></td>
                  <td><%= order.customer.full_name %></td>
                  <td><%= @total_amount %></td>
                  <td><%= order.status_i18n %></td>
                  <% end %>
                 </tr>
                </tbody>
              </table>
                <div class="row">
                  <div class="mx-auto">
                  <%= paginate @orders %>
                  </div>
                </div>
    </div>
  </div>
</div>