<h3>注文履歴一覧</h3>
<table class='table'>
  <thead>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </thead>
  <tbody>

    <% @orders.each do |order| %>

    <% @total_amount = 0 %>
    <% order.order_details.each do |order_detail| %>
    <% @total_amount += order_detail.amount %>
    <% end %>
   <tr>
    <td><%= link_to admin_order_path(order) do %>
    <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
    <% end %></td>
    <td><%= order.customer.full_name %></td>
    <td><%= @total_amount %></td>
    <!--<td>注文ステータス</td>-->
    <% end %>
   </tr>
  </tbody>
</table>